{
  "name": "micro-applications",
  "description": "Micro Applications",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "start:libs": "lerna run start --stream --scope @micro/*",
    "start:apps": "lerna run start --stream --scope @apps/*",
    "build:libs": "lerna run build --stream --scope @micro/*",
    "build:apps": "lerna run build --stream --scope @apps/*",
    "release:major": "lerna version major --conventional-commits --no-private --no-git-tag-version --no-push",
    "release:minor": "lerna version minor --conventional-commits --no-private --no-git-tag-version --no-push",
    "release:patch": "lerna version patch --conventional-commits --no-private --no-git-tag-version --no-push",
    "prepare": "husky install",
    "prettier:fix": "prettier --write ./packages ./apps"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,css,scss,md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "history": "^5.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.5",
    "@babel/core": "^7.22.5",
    "@babel/plugin-transform-modules-commonjs": "^7.22.5",
    "@babel/plugin-transform-runtime": "^7.22.6",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@types/node": "^20.3.3",
    "@vue/compiler-sfc": "^3.3.4",
    "babel-loader": "^9.1.2",
    "clean-webpack-plugin": "^4.0.0",
    "conventional-changelog-cli": "^3.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.31.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "lerna": "^7.1.1",
    "less": "^4.1.3",
    "less-loader": "^11.1.3",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^2.8.8",
    "process": "^0.11.10",
    "rimraf": "^5.0.1",
    "sass": "^1.63.6",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "typescript": "^5.1.6",
    "url-loader": "^4.1.1",
    "vue-loader": "^17.2.2",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
