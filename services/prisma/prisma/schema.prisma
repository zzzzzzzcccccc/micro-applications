generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model app {
  id         BigInt     @id @default(autoincrement())
  name       String     @db.VarChar(100)
  path       String?    @db.VarChar(100)
  mode       app_mode   @default(APPLICATION)
  frame      app_frame  @default(REACT)
  status     app_status @default(INACTIVE)
  metadata   Json?
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt

  @@index([name])
}

model feature {
  id         BigInt         @id @default(autoincrement())
  tenant_id  String         @db.VarChar(50)
  name       String         @db.VarChar(100)
  value      String         @default("off") @db.VarChar(255)
  status     feature_status @default(ACTIVE)
  metadata   Json?
  created_at DateTime       @default(now())
  updated_at DateTime       @updatedAt

  @@index([tenant_id])
  @@index([status])
}

enum app_mode {
  APPLICATION
  COMPONENT
}

enum app_frame {
  REACT
}

enum app_status {
  ACTIVE
  INACTIVE
}

enum feature_status {
  ACTIVE
  INACTIVE
  ROLLOUT
}
